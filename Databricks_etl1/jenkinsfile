pipeline {
    agent any

    environment {
        DATABRICKS_HOST = "https://<your-databricks-workspace-url>"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Validate Bundle') {
            steps {
                withCredentials([string(credentialsId: 'databricks-pat', variable: 'DATABRICKS_TOKEN')]) {
                    sh 'databricks bundle validate'
                }
            }
        }

        stage('Deploy Bundle') {
            steps {
                withCredentials([string(credentialsId: 'databricks-pat', variable: 'DATABRICKS_TOKEN')]) {
                    sh 'databricks bundle deploy -t dev'
                }
            }
        }

        stage('Run ELT Pipeline Job') {
            steps {
                withCredentials([string(credentialsId: 'databricks-pat', variable: 'DATABRICKS_TOKEN')]) {
                    sh 'databricks bundle run elt_pipeline_job'
                }
            }
        }
    }
}
